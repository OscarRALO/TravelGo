<?xml version="1.0" encoding="utf-8"?>
<!-- TEMA: Material Design + RecyclerView -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ScrollView principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hola viajero ðŸ‘‹"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â¿A dÃ³nde vamos hoy?"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/card_background"
                    android:contentDescription="@string/profile" />
            </LinearLayout>

            <!-- Controles de entrada - SearchView -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/search_destinations" />

                    <!-- TEMA: Controles de entrada - EditText -->
                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Buscar destinos increÃ­bles..."
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLines="1" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TÃ­tulo de categorÃ­as -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­as"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="24dp" />

            <!-- Material Design - Chips para categorÃ­as -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <!-- Buttons - Chips como botones seleccionables -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAll"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Todos"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPlaya"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ–ï¸ Playa" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMontana"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â›°ï¸ MontaÃ±a" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCiudad"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ™ï¸ Ciudad" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHistorico"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›ï¸ HistÃ³rico" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNaturaleza"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¿ Naturaleza" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <!-- TÃ­tulo de destinos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Destinos Populares"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todos >"
                    android:textSize="14sp"
                    android:textColor="#FF6B35" />
            </LinearLayout>

            <!-- RecyclerView - Lista dinÃ¡mica de destinos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDestinations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_destination"
                tools:itemCount="3" />

            <!-- Estado vacÃ­o -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜•"
                    android:textSize="72sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No se encontraron destinos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Intenta con otra bÃºsqueda"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Espaciado para el BottomNavigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Material Design - ProgressBar para loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>